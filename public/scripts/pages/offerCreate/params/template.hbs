{{#> OfferCreateLayout }}
<div id="offerCreateParams" class="offerCreate__params">
    <div class="offerCreate__params-row">
        <div class="offerCreate__params-rooms">
            <div class="offerCreate__choice">
                <h4 class="offerCreate__choice-label">Количество комнат</h4>
                <div class="offerCreate__choice-btns">
                    <div class="offerCreate__choice-btn">
                        <input class="choice-button" id="radio-1" type="radio" name="section-1" checked>
                        <label class="choice-label" for="radio-1">1</label>
                    </div>
                    <div class="offerCreate__choice-btn">
                        <input class="choice-button" id="radio-2" type="radio" name="section-1">
                        <label class="choice-label" for="radio-2">2</label>
                    </div>
                    <div class="offerCreate__choice-btn">
                        <input class="choice-button" id="radio-3" type="radio" name="section-1">
                        <label class="choice-label" for="radio-3">3</label>
                    </div>
                    <div class="offerCreate__choice-btn">
                        <input class="choice-button" id="radio-4" type="radio" name="section-1">
                        <label class="choice-label" for="radio-4">4+</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="offerCreate__params-square">
            <div class="offerCreate__input">
                <label for="input-square" class="offerCreate__input-label">Площадь</label>
                {{> Input id="input-square" type="text"}}
            </div>
        </div>
    </div>
    <div class="offerCreate__params-renovation">
        <div class="offerCreate__choice">
            <h4 class="offerCreate__choice-label">Тип ремонта</h4>
            <div class="offerCreate__choice-btns">
                <div class="offerCreate__choice-btn">
                    <input class="choice-button" id="radio-5" type="radio" name="section-2" checked>
                    <label class="choice-label" for="radio-5">Современный ремонт</label>
                </div>
                <div class="offerCreate__choice-btn">
                    <input class="choice-button" id="radio-6" type="radio" name="section-2">
                    <label class="choice-label" for="radio-6">Косметический ремонт</label>
                </div>
                <div class="offerCreate__choice-btn">
                    <input class="choice-button" id="radio-7" type="radio" name="section-2">
                    <label class="choice-label" for="radio-7">Черновая отделка</label>
                </div>
                <div class="offerCreate__choice-btn">
                    <input class="choice-button" id="radio-8" type="radio" name="section-2">
                    <label class="choice-label" for="radio-8">Нужен полный ремонт</label>
                </div>
                <div class="offerCreate__choice-btn">
                    <input class="choice-button" id="radio-9" type="radio" name="section-2">
                    <label class="choice-label" for="radio-9">Нужен частичный ремонт</label>
                </div>
                <div class="offerCreate__choice-btn">
                    <input class="choice-button" id="radio-10" type="radio" name="section-2">
                    <label class="choice-label" for="radio-10">Улучшенная черновая</label>
                </div>
            </div>
        </div>
    </div>
</div>
{{/ OfferCreateLayout }}