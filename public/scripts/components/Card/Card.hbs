<div class="card">
    <a class="card__link" href="/">

        <div class="card__heart">
            {{> HeartButton }}
        </div>


        <div class="card__photo">
            <img class="card__photo-img" src="{{image}}" alt="">
        </div>
        <div class="card__content">
            <h3 class="card__price">{{cardTitle}}</h3>
            <div class="card__info">
                <ul>
                    <li>{{rooms}}-комн. кв.</li>
                    <li>{{square}} м²</li>
                    <li>{{floor}}/{{totalFloors}} этаж</li>
                </ul>
            </div>
            <div class="card__metro">
                <svg width="17" height="12" viewBox="0 0 17 12" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M15.6135 9.69889L11.8759 0.239685L8.71426 5.76928L5.56546 0.239685L1.81506 9.69889H0.714264V11.1325H6.37187V9.69889H5.52706L6.34626 7.34368L8.71426 11.2349L11.0823 7.34368L11.9015 9.69889H11.0567V11.1325H16.7143V9.69889H15.6135Z" fill="{{metroColor}}"/>
                </svg>
                <span>{{metroStation}}</span>
            </div>
            <div class="card__address">
                <span>{{address}}</span>
            </div>
        </div>
    </a>
</div>