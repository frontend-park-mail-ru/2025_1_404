<div class="search__results-offer" data-id="{{id}}">
    <div class="search__results-offer-img">
        <img src="{{image}}" alt="">
        <!--<div class="search__results-offer-heart">-->
        <!--{{> HeartButton }}-->
        <!--</div>-->
    </div>
    <div class="search__results-offer-left">
        <div class="search__results-offer-titles">
            <h2 class="search__results-offer-title">
                <a href="/offer/details/{{id}}" id="search-link">
                    {{title}}
                </a>
            </h2>
            <span class="search__results-offer-price">
                {{priceTitle}}
            </span>
        </div>
        <div class="search__results-offer-info">
            <span class="search__results-offer-address">
                {{address}}
            </span>
            <div class="search__results-offer-details">
                <ul>
                    <li>{{rooms}}-комн. кв.</li>
                    <li>{{square}} м²</li>
                    <li>{{floor}}/{{totalFloors}} этаж</li>
                </ul>
            </div>
            <div class="search__results-offer-metro">
                <div class="search__results-offer-metro-station">
                    <svg width="17" height="12" viewBox="0 0 17 12" fill="black" xmlns="http://www.w3.org/2000/svg">
                        <path d="M15.6135 9.69889L11.8759 0.239685L8.71426 5.76928L5.56546 0.239685L1.81506 9.69889H0.714264V11.1325H6.37187V9.69889H5.52706L6.34626 7.34368L8.71426 11.2349L11.0823 7.34368L11.9015 9.69889H11.0567V11.1325H16.7143V9.69889H15.6135Z" fill="{{metroColor}}"/>
                    </svg>
                    <span>{{metroStation}}</span>
                </div>
                <div class="search__results-offer-metro-time">
                    <div class="search__results-offer-metro-time-img">
                        <i class="fa-solid fa-person-walking fa-sm"></i>
                        <span>Нет</span>
                    </div>
                </div>

            </div>
            <span class="search__results-offer-description">
                {{breakLines description}}
            </span>
        </div>
    </div>
    <div class="search__results-offer-seller">
        <div class="search__results-offer-seller-wrapper">
            <span class="search__results-offer-seller-name">
                {{firstName}}
            </span>
            <span class="search__results-offer-seller-surname">
                {{lastName}}
            </span>
        </div>
        <div class="search__results-offer-seller-rating">
            <div class="search__results-offer-seller-rating-wrapper">
                <span class="search__results-offer-seller-rating-num">
<!--                    {{rating}}-->
                    5
                </span>
                <div class="search__results-offer-seller-rating-stars">
                    {{renderRating 5}}
                </div>
            </div>
            <span class="search__results-offer-seller-rating-reviews">
<!--                {{reviewsAmount}} отзывов-->
                15 отзывов
            </span>
        </div>
    </div>
</div>