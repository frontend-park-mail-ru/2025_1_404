<form class="filter" id="filter">
    <div id="filterInputs" class="filter__first">
        {{> FilterCheckListSelect id="filterOfferType" label="Тип сделки" choices="Аренда;Продажа"}}
        {{> FilterCheckListSelect id="filterPropertyType" label="Тип недвижимости" choices="Квартира;Дом;Апартаменты" }}
        {{> FilterDoubleInputSelect id="filterPrice" name="offer_price" label="Цена"}}
        {{> FilterDoubleInputSelect id="filterSquare" name="offer_square" label="Площадь"}}
        {{> AddressInput class="filter__bottom-input" id="filterInputAddress" name="offer_address" type="text" placeholder="Город, улица, дом"}}
    </div>
    <div class="filter__bottom">
        {{> PrimaryButton name="Показать на карте" class="filter__submit" id="filterMapSubmitButton"}}
        {{> PrimaryButton name="Показать объявления" class="filter__submit" id="filterListSubmitButton"}}
    </div>
</form>
